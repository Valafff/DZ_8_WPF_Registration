<Window x:Class="_15._01.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_15._01"
        mc:Ignorable="d"
        Title="AppWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Добавить" Click="MenuItem_Click"/>
            <MenuItem Header="Сохранить" Click="MenuItem_Click_save"/>
            <MenuItem Header="Удалить" Click="MenuItem_Click_del"/>
            <MenuItem Header="Выход" Click="MenuItem_Click_exit"/>
        </Menu>
        
        <Label Grid.Row="1" x:Name="userLabel"/>

        <StackPanel  Grid.Row="2" x:Name="userNotes"/>
    </Grid>
</Window>
